
@{
    ViewBag.Title = "Index";
}

<h2 style="font-family:Microsoft JhengHei;">查詢</h2>

<div class="form-inline" role="form">
    <div class="form-group">
        <label for="email">病歷號碼</label>
        <input type="email" class="form-control" id="patient_id" placeholder="Enter patient ID">
    </div>
    <div class="form-group">
        <label for="pwd">醫生姓名</label>
        <input type="password" class="form-control" id="doctor_name" placeholder="Enter doctor name">
    </div>
    <div class="form-group">
        <label for="pwd">科別</label>
        <input type="password" class="form-control" id="division" placeholder="Enter division">
    </div>

    <div class="form-group">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
            <input type="button" value="查詢" class="btn btn_search" style="background-color: #99b2db; color:#194284" />
        </div>
    </div>

</div>


<div id="search_grid"></div>
<div class="uk-card  uk-text-left" id="record_window" style="display:none">
    <div id="patient_grid"></div>
</div>

<script>

$(".btn_search").click(function () {
            if (getgridcount != 0) {
                $("#patient_grid").data('kendoGrid').destroy();
            }
            getgridcount++;
            var search_data = {
                
            };
            $("#patient_grid").kendoGrid({
                height: 500,
                columns: [
                    { field: "BookClassName", title: "床號", width: "10%" },
                    { field: "BookName", title: "病歷號碼", width: "30%" },
                    { field: "BookBoughtDate", title: "病人名稱", width: "10%" },
                    
                ],
                dataSource: {
                    transport: {
                        read: {
                            url: "GetGridData",
                            type: "post",
                            dataType: "json",
                            data: search_data
                        }
                    }
                }
            })
        });
    });
</script>